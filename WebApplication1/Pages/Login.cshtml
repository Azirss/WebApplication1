@model WebApplication1.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/Login.css" />
<link rel="tex" href="~/css/Login.css" />
<div id="big" style="text-align:center">
    <div id="top">
        <font size="7" color=#00FFFF>
            <b>
                登   录
            </b>
        </font><br />
            <form>
                用户名：<input type="text" name="username" placeholder="请输入用户名" /><br /><br />
                密  码：<input type="password" name="password" placeholder="请输入密码" /><br /><br />
                <select name="customers" onchange="showCustomer(this.value)">
                    <option value="">选择角色:</option>
                    <option value="Admin">管理员</option>
                    <option value="Student">学生</option>
                    <option value="Teacher">教师</option>
                </select>
                <button name="login" onclick="goto()" value="登录">登录</button>
            </form>
            <ul>
                <li><a asp-page="/Student">学生</a></li>
                <li><a asp-page="/Admin">管理员</a></li>
                <li><a asp-page="/Teacher">老师</a></li>
            </ul>
    </div>
</div>
<script type="text/javascript">
    var juese = this.value;
    function goto(juese) {
        if (juese = "Admin") {
            window.navigator("Teacher.cshtml");
        }
        else if (juese = "Student") {
            window.navigator("Student.cshtml");
        }
        else if (juese = "Teacher") {
            window.navigator("Teacher.cshtml");
        }
    }
</script>
